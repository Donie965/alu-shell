#!/usr/bin/env bash
# 11-manage_my_process (init script)

# Define the PID file location
PID_FILE="/var/run/my_process.pid"

# Function to start the process
start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
        return
    fi

    # Start the manage_my_process in the background
    ./manage_my_process &
    echo $! > "$PID_FILE"  # Save the PID of the running process
    echo "manage_my_process started"
}

# Function to stop the process
stop() {
    if [ ! -f "$PID_FILE" ]; then
        echo "PID file not found. No process to stop."
        return
    fi

    # Get the PID from the file
    PID=$(cat "$PID_FILE")

    # Kill the process
    kill "$PID"
    rm "$PID_FILE"  # Remove the PID file
    echo "Good"  # Print "Good" when the process is stopped
    echo "manage_my_process stopped"
}

# Function to restart the process
restart() {
    stop  # Stop the process first
    start  # Then start it again
    echo "manage_my_process restarted"
}

# Handle the script arguments
case "$1" in
    start) start ;;
    stop) stop ;;
    restart) restart ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}" ;;
esac 
